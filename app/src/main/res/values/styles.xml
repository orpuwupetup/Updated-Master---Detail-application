<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NumberNameTextStyle">
        <item name="android:textSize">@dimen/material_design_large_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberListItemNameTextStyle" parent="NumberNameTextStyle">
        <item name="android:textColor">@color/state_dependant_text_color</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="ErrorViewTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/material_design_large_font_size</item>
    </style>

</resources>
