<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_number_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/number_list_item_height"
        android:orientation="horizontal"
        android:background="@color/state_dependant_list_item_background"
>
    <ImageView
            android:id="@+id/image_number_list_item_image"
            android:layout_width="match_parent"
               android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="3"
            tools:src="@drawable/ic_launcher_background"
    />

    <TextView
            android:id="@+id/text_number_list_item_name"
            android:layout_width="match_parent"
              android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            tools:text="10 000"
            style="@style/NumberListItemNameTextStyle"
    />



</LinearLayout>